<h1>Listing ideas</h1>
<% @ideas.each do |idea| %>
  <div class="media">
      <%= link_to image_tag(idea.picture.present? ? idea.picture_url : 'default_post_image.jpg'), idea_path(idea), class: 'media-left' %>
    <br />
    <%= idea.user.try(:email) || "No Creator" %>
    <div class="media-body">
      <%= idea.description %><br>
    </div>
  </div>
  <hr>
<% end %>

