<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Body</th>
      <th>Idea</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commens.each do |commen| %>
      <tr>
        <td><%= commen.user_name %></td>
        <td><%= commen.body %></td>
        <td><%= commen.idea_id %></td>
        <td><%= link_to 'Show', commen %></td>
        <td><%= link_to 'Edit', edit_commen_path(commen) %></td>
        <td><%= link_to 'Destroy', commen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_commen_path %>
